<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuaris</title>

    <!-- Css principal de la página y estilo de Emojis y simbolos usandos en la pagina -->
    <link rel="stylesheet" href="/css/paginaPrincipal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Cabecera de la página -->
    <header class="page-header">

        <!-- Botón para volver atrás -->
        <div class="header-left">
            <a href="/" class="back-link"><i class="fas fa-arrow-left"></i></a>
            <h1 class="page-title">Usuaris</h1>
        </div>

        <!-- Botón para añadir nuevo usuario -->
        <div class="header-right">
            <a href="/users/form" class="add-button">
                <i class="fas fa-plus"></i> Nou Usuari
            </a>
        </div>

    </header>

    <!-- Contenido principal -->
    <main class="main-content">

        <!-- Barra de búsqueda para filtrar usuarios -->
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Buscar per nom, email o nivell..." onkeyup="filterUsers(this.value)">
        </div>

        <!-- Lista de usuarios -->
        <section class="list">

            <% if (users && users.length > 0) { %>
                <% users.forEach(user => { %>

                    <!-- Card de cada usuario, se guardan data para usar en filtros -->
                    <article class="card" data-name="<%= user.name %>"
                             data-description="<%= user.email %>">

                        <!-- Información principal del usuario -->
                        <div class="card-info">

                            <h3 class="card-title"><%= user.name %> — <%= user.level %></h3>

                            <p class="card-email">
                                Email: <%= user.email %>
                            </p>

                        </div>

                        <!-- Botones para realizar acciones: Editar y Borrar -->
                        <div class="card-actions">

                            <!-- Editar usuario -->
                            <a href="/users/edit/<%= user.id_user %>" class="edit-button">
                                <img src="/images/icons/edit_icon.png" alt="Editar"> Editar
                            </a>

                            <!-- Borrar usuario -->
                            <button type="button" class="delete-button" onclick="deleteUser('<%= user.id_user %>')">
                                <img src="/images/icons/trash-2-64.png" alt="Borrar"> Eliminar
                            </button>

                        </div>

                    </article>

                <% }) %>

            <% } else { %>

                <!-- Si no hay usuarios registrados -->
                <p class="no-architects">No hi ha usuaris registrats.</p>

            <% } %>

        </section>

    </main>

    <!-- Script para filtrado y eliminación -->
    <script src="/scripts/users/users.js"></script>

</body>
</html>