<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Nou Usuari</title>
    <!-- Estilos para el formulario de creación -->
    <link rel="stylesheet" href="/css/form.css">
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <!-- Encabezado del formulario -->
    <header class="form-header">
        <a href="/users" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Nou Usuari</h1>
    </header>

    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir nuevo usuario -->
            <form id="form-user">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label>Nom <span class="required">*</span></label>
                    <input type="text" name="name" required />
                </div>

                <div class="form-group">
                    <label>Email <span class="required">*</span></label>
                    <input type="text" name="email" required />
                </div>

                <div class="form-group">
                    <label>Contrasenya <span class="required">*</span></label>
                    <input type="password" name="password" required />
                </div>

                <div class="form-group">
                    <label>Confirmació de Contrasenya <span class="required">*</span></label>
                    <input type="password" name="confirmPassword" required />
                </div>

                <div class="form-group">
                    <label>Nivell <span class="required">*</span></label>
                    <select name="level" required>
                        <option value="Admin">Admin</option>
                        <option value="Editor">Editor</option>
                    </select>
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Crear Usuari
                </button>
            </form>
        </section>
    </main>

    <!-- Script con la lógica del formulario -->
    <script src="/scripts/users/usersForm.js"></script>
</body>

</html>