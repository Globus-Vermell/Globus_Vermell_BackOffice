<!DOCTYPE html>
<html lang="ca">

<head>
    <%- include('../partials/head', { title: 'Nova Tipologia', cssType: 'form' }) %>
</head>

<body>
    <!-- Encabezado del formulario -->
    <%- include('../partials/headerForm', { backUrl: '/typology', title: 'Nova Tipologia' }) %>

    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir nueva tipología -->
            <form id="form-typology">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="name">Nom:<span class="required">*</span></label>
                    <input type="text" id="name" name="name" required />
                </div>

                <div class="form-group">
                    <label for="image">Imatge :</label>
                    <input type="file" id="image" name="image" accept="image/*" />
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar
                </button>
            </form>
        </section>
    </main>

    <!-- Script con la lógica del formulario -->
    <script src="/scripts/typology/typologyForm.js"></script>
</body>

</html>