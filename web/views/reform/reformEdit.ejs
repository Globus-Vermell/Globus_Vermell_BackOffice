<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head', { title: 'Editar Reforma', cssType: 'form' }) %>
</head>

<body>

    <!-- Encabezado del formulario -->
    <%- include('../partials/headerForm', { backUrl: '/reform', title: 'Editar Reforma' }) %>

    <main class="flex-container">

        <!-- Contenedor del formulario -->
        <section class="form-container">
            <form id="form-reform-edit">

                <!-- Año de la reforma -->
                <div class="form-group">
                    <label for="year">Año de la reforma: <span class="required">*</span></label>
                    <input type="number" id="year" name="year" value="<%= reform.year %>" required />
                </div>

                <!-- Selección de arquitecto -->
                <div class="form-group">
                    <label for="id_architect">Arquitecto: <span class="required">*</span></label>
                    <select id="id_architect" name="id_architect" required>
                        <option value="">-- Selecciona un arquitecto --</option>
                        <% architects.forEach(arq=> { %>
                            <option value="<%= arq.id_architect %>" <%=arq.id_architect===reform.id_architect
                                ? 'selected' : '' %>>
                                <%= arq.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <!-- Botón de enviar -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar
                </button>

            </form>
        </section>

    </main>

    <!-- Script que guarda la información de la reforma para poder editarla -->
    <script>
        const reform = JSON.parse('<%- JSON.stringify(reform) %>');
    </script>

    <!-- Script que maneja la lógica del formulario de edición -->
    <script src="/scripts/reform/reformEdit.js"></script>

</body>

</html>