<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <style>
        .container {
            max-width: 420px;
            margin: 40px auto;
            padding: 20px;
        }

        .form-container {
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 6px;
            background: #fff;
        }

        form label {
            display: block;
            margin-top: 10px;
        }

        form input {
            width: 100%;
            padding: 8px;
            margin-top: 6px;
            box-sizing: border-box;
        }

        form button {
            margin-top: 12px;
            padding: 8px 12px;
        }

        .message {
            display: block;
            margin-top: 10px;
            min-height: 18px;
            color: red;
        }
    </style>
</head>

<body>
    <div class="container">
        <% if (typeof username !=='undefined' ) { %>
            <div class="form-container">
                <h2>Hola <%= username %>!</h2>
                <p>Estás autenticado.</p>
                <form action="/logout" method="POST">
                    <button type="submit">Cerrar sesión</button>
                </form>
            </div>
            <% } else { %>

                <div class="form-container" id="login-section">
                    <h2>Iniciar sesión</h2>
                    <form id="login-form" action="/login" method="POST" autocomplete="off">
                        <label for="login-username">Usuario</label>
                        <input type="text" id="login-username" name="username" required />

                        <label for="login-password">Contraseña</label>
                        <input type="password" id="login-password" name="password" required />

                        <button type="submit">Entrar</button>
                        <span class="message" id="login-message">&nbsp;</span>
                    </form>
                </div>

                <% } %>
    </div>

    <script>
        // Validación mínima en cliente (opcional)
        const form = document.getElementById('login-form');
        const msg = document.getElementById('login-message');
        form?.addEventListener('submit', (e) => {
            const u = document.getElementById('login-username').value.trim();
            const p = document.getElementById('login-password').value;
            if (!u || !p) {
                e.preventDefault();
                msg.textContent = 'Rellena usuario y contraseña.';
            }
        });
        document.getElementById('login-username')?.focus();
    </script>
</body>

</html>